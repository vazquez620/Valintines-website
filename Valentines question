    <script>
        const yesButton = document.getElementById('yesButton');
        const noButton = document.getElementById('noButton');
        const initialContent = document.getElementById('initial-content');
        const celebration = document.getElementById('celebration');
        const rejection = document.getElementById('rejection');

        yesButton.addEventListener('click', function() {
            initialContent.style.display = 'none';
            celebration.classList.add('active');
            
            // Create falling hearts
            createHearts();
        });

        noButton.addEventListener('click', function() {
            // Move the button away when hovered
            const randomX = Math.random() * (window.innerWidth - 200);
            const randomY = Math.random() * (window.innerHeight - 100);
            
            // Show error message briefly
            initialContent.style.opacity = '0.3';
            rejection.classList.add('active');
            
            setTimeout(() => {
                rejection.classList.remove('active');
                initialContent.style.opacity = '1';
            }, 2000);
        });

        // Make "NO" button run away on hover/touch
        function moveNoButton() {
            const terminal = document.querySelector('.terminal-body');
            const rect = terminal.getBoundingClientRect();
            
            const maxX = rect.width - noButton.offsetWidth - 40;
            const maxY = rect.height - noButton.offsetHeight - 40;
            
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;
            
            noButton.style.position = 'absolute';
            noButton.style.left = randomX + 'px';
            noButton.style.top = randomY + 'px';
        }
        
        noButton.addEventListener('mouseenter', moveNoButton);
        noButton.addEventListener('touchstart', function(e) {
            e.preventDefault();
            moveNoButton();
        });

        function createHearts() {
            const colors = ['#ff6b6b', '#ff8787', '#ffa5a5', '#ffc9c9', '#ffe3e3'];
            
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.innerHTML = '‚ù§Ô∏è';
                    heart.style.position = 'fixed';
                    heart.style.left = Math.random() * window.innerWidth + 'px';
                    heart.style.top = '-50px';
                    heart.style.fontSize = (Math.random() * 30 + 20) + 'px';
                    heart.style.animation = `fall ${Math.random() * 3 + 2}s linear`;
                    heart.style.opacity = Math.random();
                    heart.style.pointerEvents = 'none';
                    heart.style.zIndex = '1000';
                    
                    document.body.appendChild(heart);
                    
                    setTimeout(() => heart.remove(), 5000);
                }, i * 200);
            }
        }

        // Add falling animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fall {
                to {
                    top: 100vh;
                    transform: translateX(${Math.random() * 100 - 50}px) rotate(360deg);
                }
            }
        `;
        document.head.appendChild(style);
    </script>
